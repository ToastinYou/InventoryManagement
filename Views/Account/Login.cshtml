@model AccountViewModel

@{
    ViewData["Title"] = "Login";
}

<form asp-action="Login">
    <div class="mb-2">
        <label asp-for="@Model.Email" class="form-label">Email</label>
        <input asp-for="@Model.Email" type="email" class="form-control">
        <span asp-validation-for="@Model.Email" class="form-text text-danger"></span>
    </div>
    <div class="mb-2">
        <label asp-for="@Model.Password" class="form-label">Password</label>
        <input asp-for="@Model.Password" type="password" class="form-control">
        <span asp-validation-for="@Model.Password" class="form-text text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
    <a asp-controller="Account" asp-action="Register" class="btn btn-secondary">Register</a>
</form>
